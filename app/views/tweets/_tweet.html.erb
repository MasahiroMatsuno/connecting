<div class="tweet">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '記事詳細', "/tweets/#{tweet.id}", method: :get %>
      </li>
      <li>
     <% if user_signed_in? %>
        <%# <%= link_to "投稿者ページ", user_path(tweet.user.id) %> 
         <%= link_to "投稿者", user_path(tweet.user) %>
    　 </li>
      <% end %>
    </ul>
  </div>
  <div class="tweet__name">
    <%= tweet.name %>
  </div>

  <div class="tweet__image" style="background-image: url(<%= tweet.image %>);"> 
    <%# <%= image_tag 'arrow_top.png' %> 
  </div>
  
  <div class="tweet__text">
    <%= simple_format(tweet.text) %>
  </div>
  気になる！
   (<%= tweet.liked_users.count %>)
</div>